# SDI - Gestión Documental: Configuración de Seguridad y Reescritura de URLs
# Requiere mod_rewrite habilitado en Apache

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # No procesar archivos y directorios reales
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Redirigir todas las rutas /api/* al router.php
    RewriteRule ^api$ router.php [QSA,L]
    RewriteRule ^api/(.*)$ router.php [QSA,L]
</IfModule>

# 1. SEGURIDAD: Bloquear acceso a archivos y carpetas sensibles
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql|env)$">
    Require all denied
</FilesMatch>

# Bloquear acceso a carpetas sensibles
<IfModule mod_rewrite.c>
    # Bloquear acceso web directo solo a las carpetas críticas
    RewriteRule ^(\.git|\.env) - [F,L]
    RewriteRule ^(config|models|controllers|middleware|services|database|helpers|logs)/ - [F,L]
    RewriteRule ^public/uploads/.*\.(php[0-9]?|phtml|phar)$ - [F,L]
</IfModule>

# 2. Prevenir listado de directorios
Options -Indexes

# 3. Headers de Seguridad
<IfModule mod_headers.c>
    # Prevenir clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Prevenir MIME sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # XSS Protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # CSP (Content Security Policy)
    Header set Content-Security-Policy "default-src 'self' https:; script-src 'self' https: 'unsafe-inline' cdn.tailwindcss.com cdnjs.cloudflare.com; style-src 'self' https: 'unsafe-inline' cdn.tailwindcss.com; img-src 'self' data: https:; font-src 'self' data: https: cdnjs.cloudflare.com; connect-src 'self' https:;"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# 4. Comprensión GZIP para mejor rendimiento
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# 5. Caché del navegador para recursos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    
    # HTML
    ExpiresByType text/html "access plus 1 hour"
    
    # Estilos y JavaScript
    ExpiresByType text/css "access plus 30 days"
    ExpiresByType application/javascript "access plus 30 days"
    ExpiresByType application/json "access plus 0 seconds"
    
    # Imágenes
    ExpiresByType image/jpeg "access plus 30 days"
    ExpiresByType image/png "access plus 30 days"
    ExpiresByType image/gif "access plus 30 days"
    ExpiresByType image/svg+xml "access plus 30 days"
    ExpiresByType image/x-icon "access plus 30 days"
    
    # Fuentes
    ExpiresByType application/font-woff "access plus 30 days"
    ExpiresByType application/font-woff2 "access plus 30 days"
    ExpiresByType application/x-font-ttf "access plus 30 days"
</IfModule>

# 6. Permitir acceso a recursos públicos
<FilesMatch "\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
    <IfModule mod_expires.c>
        ExpiresActive On
        ExpiresDefault "access plus 30 days"
    </IfModule>
</FilesMatch>